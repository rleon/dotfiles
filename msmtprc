account leonnu
host smtp.fastmail.com
protocol smtp
auth on
from leon@leon.nu
user leon@leon.nu
tls on
tls_nocertcheck

account nvidia
host mail.nvidia.com
port 587
protocol smtp
auth on
from leonro@nvidia.com
user leonro@nvidia.com
tls on
tls_nocertcheck

account kernel
host mail.kernel.org
port 587
protocol smtp
auth on
from leon@kernel.org
user leon
tls on
tls_nocertcheck

# Set a default account
account default : kernel
