[alias]
	st = status
	br = branch -v
	rb = rebase -i
	co = checkout
	c = commit -s
	fp = format-patch -M
	grpe = grep
	pl = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --abbrev=12
	fixes = log --abbrev=12 -1 --format='Fixes: %h (\"%s\")'
	fixup = commit -s --fixup
	up = add --update
	l = log --oneline
	sp = !bash git-switch-profile
	send-internal = "!git sp work && git send-email --to=linux-internal@mellanox.com"
	# Usage: git signoff-rebase [base-commit]
	signoff-rebase = "!GIT_SEQUENCE_EDITOR='sed -i -re s/^pick/e/' sh -c 'git rebase -i $1 && while test -f .git/rebase-merge/interactive; do git commit --amend --signoff --no-edit && git rebase --continue; done' -"
	build-next = "!git co queue-next && git remote update saeed && git reset --hard saeed/net-next && git merge --no-ff --no-edit rdma-next"
	build-rc = "!git co queue-rc && git remote update saeed && git reset --hard saeed/net && git merge --no-ff --no-edit rdma-rc"
	# git sync - sync current folder
	# git sync all - sync all known folders
	sync = "!f() { if [ "r$1" = "rall" ]; then FOLDERS=(linux-rdma iproute2 smatch sparse rdma-core); for i in "${FOLDERS[@]}"; do cd $HOME/src/${i} && echo "syncing ${i}" && git sync; done; else git remote update --prune && git push backup --mirror; fi;};f"
	undo = reset --hard
	reword = commit -s --amend
	mcp = "!f() { git sp user && git cherry-pick $1 && git reword;};f"
	rgrep = "!f() { git grep $1 drivers/infiniband/ include/rdma/ include/uapi/rdma/;};f"
